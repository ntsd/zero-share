<button
  id="darkmode-toggle"
  class="swap swap-rotate p-2"
  aria-label="dark mode"
>
  <div class="swap-on">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="h-5 w-5 md:h-6 md:w-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
      ></path>
    </svg>
  </div>

  <div class="swap-off">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="h-5 w-5 md:h-6 md:w-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
      ></path>
    </svg>
  </div>
</button>

<script is:inline>
const localStorageKey = "darkMode";
let localDarkMode = localStorage.getItem(localStorageKey);
let darkMode = false;
// initial dark mode from local storage or media
switch (localDarkMode) {
  case "true":
    darkMode = true;
    break;
  case "false":
    darkMode = false;
    break;
  case null:
    darkMode =
      window?.matchMedia?.("(prefers-color-scheme:dark)")?.matches || false;
}

const button = document.getElementById("darkmode-toggle");
const setToggleClass = (darkMode) => {
  if (darkMode) {
    button.classList.add("swap-active");
  } else {
    button.classList.remove("swap-active");
  }
};

function setTheme(darkMode) {
  setToggleClass(darkMode);

  localStorage.setItem(localStorageKey, darkMode ? "true" : "false");
  document
    ?.querySelector("html")
    ?.setAttribute("data-theme", darkMode ? "dark" : "light");
}

button.onclick = () => {
  darkMode = !darkMode;
  setTheme(darkMode);
};

setTheme(darkMode);
</script>
